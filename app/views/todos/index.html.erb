<div>
  <%= link_to 'Add a new To-Do', new_todo_path, class: "btn btn-primary" %>
</div>

<br>

<div class="col-sm-12">
  <% if !@todos.empty? %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">To-Do</h3>
      </div>
      <div class="panel-body">
        <table>
          <tbody>
            <% @todos.each do |todo| %>
              <% if todo.user_id == current_user.id%>
                <tr>
                  <td><strong><%= todo.name %></strong></td>
                </tr>
                <tr>
                  <td><%= link_to 'Mark Completed', complete_todo_path(todo), class: "btn btn-xs btn-link", :method => :put %>
                  - <%= link_to 'Show', todo, class: "btn btn-xs btn-link" %>
                  <% if can? :update, @todo %>
                    - <%= link_to 'Edit', edit_todo_path(todo),  class: "btn btn-xs btn-link" %>
                  <% end %>
                  - <%= link_to 'Remove', todo,  class: "btn btn-xs btn-link", method: :delete, data: { confirm: 'Are you sure you want to remove this item?' } %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <% if !@completes.empty? %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Completed</h3>
      </div>
      <div class="panel-body">
        <table>
          <tbody>
            <% @completes.each do |todo| %>
              <% if todo.user_id == current_user.id%>
                <tr>
                  <td><strong><%= todo.name %></strong></td>
                </tr>
                <tr>
                  <td><%= link_to 'Mark Incompleted', uncomplete_todo_path(todo), class: "btn btn-xs btn-link", :method => :put %>
                  - <%= link_to 'Show', todo, class: "btn btn-xs btn-link" %>
                  <% if can? :update, @todo %>
                    - <%= link_to 'Edit', edit_todo_path(todo),  class: "btn btn-xs btn-link" %>
                  <% end %>
                  - <%= link_to 'Remove', todo,  class: "btn btn-xs btn-link", method: :delete, data: { confirm: 'Are you sure you want to remove this item?' } %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div><!-- /.col-sm-12 -->

